@if (Visible)
{
    if (Button)
    {
        <span class="spinner-@Type.ToString().ToLower() spinner-@Type.ToString().ToLower()-sm" role="status"></span>
        <span class="sr-only">Loading...</span>
    }
    else
    {
        <div @attributes="@AdditionalAttributes">
            <div class="text-@Align text-@Color">
                <div class="spinner-@Type.ToString().ToLower()" style="width: @(Size)rem; height: @(Size)rem;" role="status">
                    <span class="sr-only">Loading...</span>
                </div>
            </div>
        </div>
    }
}

@code {
    [Parameter]
    public bool Visible { get; set; } = true;

    [Parameter]
    public bool Button { get; set; } = false;

    [Parameter]
    public float Size { get; set; } = 3;

    [Parameter]
    public string Align { get; set; } = "center";

    [Parameter]
    public SpinnerTypes Type { get; set; } = SpinnerTypes.Border;

    [Parameter]
    public string Color { get; set; } = "primary";

    [Parameter(CaptureUnmatchedValues = true)]
    public IDictionary<string, object> AdditionalAttributes { get; set; }

    public enum SpinnerTypes { Border, Grow }
}
